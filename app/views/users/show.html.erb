<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @user.username %></dd>
	<dt><strong>Trips Owned</strong></dt>
	<dd>
		<table>
			<% @user.trips_owned.each do |trip| %>
			<tr><td><%= link_to trip.city, trip_path(trip.id) %></td></tr>
			<% end %>
		</table>
	</dd>
	<dt><strong>Trips Joined</strong></dt>
	<dd>
		<table>
			<% @user.trips_joined.each do |trip| %>
			<tr><td><%= link_to trip.city, trip_path(trip.id) %></td></tr>
			<% end %>
		</table>
	</dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              users_path, :class => 'btn'  %>
</div>
