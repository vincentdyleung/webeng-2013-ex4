<h1>My Trips</h1>
<table>
<% if @my_trips.empty? %>
	<p>No trips found</p>
<% else %>
	<table>
	  <thead>
	    <tr>
	      <th>Start date</th>
	      <th>End date</th>
	      <th>City</th>
	      <th></th>
	      <th></th>
	      <th></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @my_trips.each do |trip| %>
	      <tr>
	        <td><%= trip.start_date %></td>
	        <td><%= trip.end_date %></td>
	        <td><%= trip.city %></td>
	        <td><%= link_to 'Show', trip %></td>
	        <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
	        <td><%= link_to 'Delete', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% end %>
<%= link_to "Create Trips", new_trip_path %>


